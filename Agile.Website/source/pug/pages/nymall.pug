              .col-span-full.flex.items-baseline.flex-col(class='lg:col-span-3 md:col-span-6')
                div(style='padding-bottom:25px')
                  p Default portrait shape
                img.w-full.object-center.border.border-bh-blue(src='/images/placeholder.svg' alt='BD Portrait')
                div
              .col-span-full.flex.items-baseline.flex-col(class='lg:col-span-3 md:col-span-6')
                div(style='padding-bottom:25px')
                  p Default square shape
                img.w-full.object-center.border.border-bh-blue(src='/images/placeholder.svg' alt='BD Square')
                div
              .col-span-full.flex.items-baseline.flex-col(class='lg:col-span-3 md:col-span-6')
